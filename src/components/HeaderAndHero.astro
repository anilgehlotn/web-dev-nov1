</main>

<section class="py-20">
    <div class="mx-auto max-w-5xl space-y-16 px-6">
        <!-- <div class="relative z-10 mx-auto max-w-xl space-y-6 text-center">
            <h2 class="text-title text-4xl font-medium lg:text-5xl">Tailus UI in numbers</h2>
            <p class="text-body">Gemini is evolving to be more than just the models. It supports an entire to the APIs and platforms helping developers and businesses innovate.</p>
        </div> -->

        <div class="grid gap-12 divide-y md:divide-y-0 md:divide-x *:text-center md:grid-cols-4 md:gap-8">
            <div class="space-y-4">
                <div class="text-title text-5xl font-bold">+3500</div>
                <p class="text-body">Active Members</p>
            </div>
            <div class="space-y-4">
                <div class="text-title text-5xl font-bold">+20</div>
                <p class="text-body">Countries</p>
            </div>
            <div class="space-y-4">
                <div class="text-title text-5xl font-bold">+30</div>
                <p class="text-body">D-Apps Built</p>
            </div>
            <div class="space-y-4">
                <div class="text-title text-5xl font-bold">+$50M</div>
                <p class="text-body">Funding</p>
            </div>
        </div>
    </div>
</section>

<script>
    const mainHeader = document.querySelector("#header");
    const menuBtn = document.querySelector("#menu-btn");

    menuBtn.addEventListener("click", () => {
    mainHeader.dataset.state = mainHeader.dataset.state === "active" ? "closed" : "active";
    })
</script>

<style>
.annonce {
  display: inline-flex;
  align-items: center;
  gap: 10px;
  padding: 10px 18px;
  border-radius: 9999px; /* full capsule shape */
  background: rgba(255, 255, 255, 0.9);
  border: 1.5px solid rgba(0, 40, 20, 0.9); /* dark neon outline */
  box-shadow:
    0 0 4px rgba(0, 255, 157, 0.3),
    inset 0 0 4px rgba(0, 255, 157, 0.15);
  color: #1a1a1a;
  font-size: 0.95rem;
  font-weight: 500;
  transition: all 0.3s ease;
}

.annonce svg {
  width: 1.1rem;
  height: 1.1rem;
  color: rgba(0, 60, 30, 0.9);
}

.annonce:hover {
  border-color: #00be66;
  box-shadow:
    0 0 6px rgba(0, 255, 157, 0.45),
    0 0 20px rgba(0, 255, 157, 0.2),
    inset 0 0 8px rgba(0, 255, 157, 0.25);
  transform: translateY(-1px);
}
</style>

